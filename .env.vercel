# =============================================================================
# C√ÅRIS SaaS Pro - Vercel Environment Variables
# =============================================================================
# Copy these variables to your Vercel project settings:
# https://vercel.com/your-project/settings/environment-variables
# =============================================================================

# =============================================================================
# ESSENTIAL (REQUIRED FOR APP TO WORK)
# =============================================================================

# Application URL (Vercel will auto-set this, but you can override)
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Database - PostgreSQL (Neon recommended for Vercel)
# Get from: https://neon.tech or https://vercel.com/storage/postgres
POSTGRES_URL=postgresql://user:password@host:5432/database?sslmode=require

# JWT Secret - Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters

# NextAuth Secret - Generate with: openssl rand -hex 32
NEXTAUTH_SECRET=your-nextauth-secret-minimum-32-characters

# =============================================================================
# EMAIL SERVICE (Required for notifications)
# =============================================================================
# Resend - https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxx
FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# REAL-TIME FEATURES (Required for chat)
# =============================================================================
# Pusher - https://dashboard.pusher.com/apps
PUSHER_APP_ID=your-pusher-app-id
NEXT_PUBLIC_PUSHER_KEY=your-pusher-public-key
PUSHER_SECRET=your-pusher-secret
NEXT_PUBLIC_PUSHER_CLUSTER=us2

# =============================================================================
# PAYMENT PROCESSING (Required for subscriptions)
# =============================================================================

# Stripe - https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# MercadoPago (Brazil) - https://www.mercadopago.com.br/developers/panel/app
MERCADOPAGO_ACCESS_TOKEN=APP_USR-xxxxxxxxxxxx
MERCADOPAGO_CLIENT_ID=your-client-id
MERCADOPAGO_CLIENT_SECRET=your-client-secret
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY=APP_USR-xxxxxxxxxxxx

# =============================================================================
# PUSH NOTIFICATIONS (Optional but recommended)
# =============================================================================
# Generate VAPID keys: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# =============================================================================
# SMS SERVICE (Optional)
# =============================================================================
# Twilio - https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# AI SERVICES (Optional)
# =============================================================================
# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxxxxx

# Anthropic Claude - https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxx

# =============================================================================
# MONITORING (Highly Recommended for Production)
# =============================================================================
# Sentry - https://sentry.io/settings/account/api/auth-tokens/
SENTRY_DSN=https://xxxx@xxxx.ingest.sentry.io/xxxx
NEXT_PUBLIC_SENTRY_DSN=https://xxxx@xxxx.ingest.sentry.io/xxxx
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=caris-saas-pro
SENTRY_AUTH_TOKEN=sntrys_xxxxxxxxxxxx

# Google Analytics - https://analytics.google.com/
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# =============================================================================
# CLOUD STORAGE (Optional)
# =============================================================================
# AWS S3 - https://console.aws.amazon.com/iam/home#/security_credentials
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# =============================================================================
# CALENDAR INTEGRATIONS (Optional)
# =============================================================================
# Google Calendar - https://console.cloud.google.com/apis/credentials
GOOGLE_CALENDAR_CLIENT_ID=xxxx.apps.googleusercontent.com
GOOGLE_CALENDAR_CLIENT_SECRET=GOCSPX-xxxxxxxxxxxx
GOOGLE_CALENDAR_REDIRECT_URI=https://your-app.vercel.app/api/calendar/google/callback

# Microsoft Outlook - https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps/ApplicationsListBlade
MICROSOFT_CLIENT_ID=your-client-id
MICROSOFT_CLIENT_SECRET=your-client-secret
MICROSOFT_TENANT_ID=your-tenant-id
MICROSOFT_REDIRECT_URI=https://your-app.vercel.app/api/calendar/outlook/callback

# =============================================================================
# SECURITY EXTRAS (Optional)
# =============================================================================
# VirusTotal - https://www.virustotal.com/gui/my-apikey
VIRUSTOTAL_API_KEY=your-virustotal-api-key

# =============================================================================
# CRON JOBS (Required for Vercel Cron)
# =============================================================================
# Generate with: openssl rand -hex 32
DATA_RETENTION_CRON_SECRET=your-cron-secret-for-data-retention

# =============================================================================
# FEATURE FLAGS (Optional - defaults shown)
# =============================================================================
NODE_ENV=production
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_AI_FEATURES=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_REAL_TIME_CHAT=true
