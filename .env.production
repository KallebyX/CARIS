# =============================================================================
# CÁRIS SaaS Pro - Production Environment (Render)
# =============================================================================
NODE_ENV=production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL - será sobrescrito pelo Render com a URL real do banco
POSTGRES_URL=postgresql://user:password@localhost:5432/caris

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret (use um hash forte: openssl rand -hex 32)
JWT_SECRET=your-super-secret-jwt-key-here
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=https://caris-saas-pro.onrender.com
SESSION_SECRET=your-session-secret-here

# =============================================================================
# EMAIL SERVICES
# =============================================================================
# Resend
RESEND_API_KEY=your-resend-api-key

# SendGrid (backup)
SENDGRID_API_KEY=your-sendgrid-api-key

# =============================================================================
# SMS SERVICES
# =============================================================================
# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# REAL-TIME COMMUNICATION
# =============================================================================
# Pusher
PUSHER_APP_ID=your-pusher-app-id
NEXT_PUBLIC_PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret
NEXT_PUBLIC_PUSHER_CLUSTER=us2

# =============================================================================
# PUSH NOTIFICATIONS
# =============================================================================
# VAPID Keys
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# =============================================================================
# PAYMENT SERVICES
# =============================================================================
# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token
MERCADOPAGO_CLIENT_ID=your-mercadopago-client-id
MERCADOPAGO_CLIENT_SECRET=your-mercadopago-client-secret
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key

# =============================================================================
# AI SERVICES
# =============================================================================
# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google AI
GOOGLE_AI_API_KEY=your-google-ai-api-key
GEMINI_API_KEY=your-gemini-api-key

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Google Analytics
GA_PROPERTY_ID=your-ga-property-id
GA_CLIENT_EMAIL=your-ga-client-email

# =============================================================================
# CLOUD STORAGE
# =============================================================================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-2
AWS_S3_BUCKET=your-s3-bucket

# Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=your-gcs-bucket

# =============================================================================
# EXTERNAL APIS
# =============================================================================
# Google Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_CALENDAR_CLIENT_ID=your-google-calendar-client-id
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

# GitHub
GITHUB_TOKEN=your-github-token

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# App Configuration
NEXT_PUBLIC_APP_URL=https://caris-saas-pro.onrender.com
NEXT_PUBLIC_APP_NAME=Cáris SaaS Pro
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_AI_FEATURES=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_REAL_TIME_CHAT=true

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# File upload limits
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif

# Session settings
SESSION_TIMEOUT_HOURS=24
REMEMBER_ME_DAYS=30

# Notification settings
EMAIL_RATE_LIMIT_PER_HOUR=10
SMS_RATE_LIMIT_PER_HOUR=5