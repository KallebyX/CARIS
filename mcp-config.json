{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-filesystem", "/Users/kalleby/Downloads/Caris SaaS Pro (1)"],
      "description": "Acesso ao sistema de arquivos do projeto"
    },
    "git": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-git", "/Users/kalleby/Downloads/Caris SaaS Pro (1)"],
      "description": "Controle de versão Git local"
    },
    "sqlite": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-sqlite", "/Users/kalleby/Downloads/Caris SaaS Pro (1)/data/caris.db"],
      "description": "Banco de dados SQLite para desenvolvimento"
    },
    "memory": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-memory"],
      "description": "Cache em memória para desenvolvimento"
    },
    "github": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "Integração com GitHub para repositório"
    },
    "analytics": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-google-analytics"],
      "env": {
        "GA_PROPERTY_ID": "${NEXT_PUBLIC_GA_ID}"
      },
      "description": "Google Analytics (ativo)"
    },
    "pdf": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-pdf"],
      "description": "Processamento de PDFs"
    },
    "puppeteer": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-puppeteer"],
      "description": "Automação de navegador para testes"
    }
  },
  "mcpServersProduction": {
    "database": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${POSTGRES_URL}"
      },
      "description": "PostgreSQL para produção"
    },
    "redis": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-redis"],
      "env": {
        "REDIS_URL": "${REDIS_URL}"
      },
      "description": "Cache Redis para produção"
    },
    "email": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-resend"],
      "env": {
        "RESEND_API_KEY": "${RESEND_API_KEY}"
      },
      "description": "Email transacional"
    },
    "sms": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-twilio"],
      "env": {
        "TWILIO_ACCOUNT_SID": "${TWILIO_ACCOUNT_SID}",
        "TWILIO_AUTH_TOKEN": "${TWILIO_AUTH_TOKEN}",
        "TWILIO_PHONE_NUMBER": "${TWILIO_PHONE_NUMBER}"
      },
      "description": "SMS via Twilio"
    },
    "ai-openai": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-openai"],
      "env": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}"
      },
      "description": "OpenAI GPT"
    },
    "ai-anthropic": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-anthropic"],
      "env": {
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}"
      },
      "description": "Anthropic Claude"
    },
    "real-time": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-pusher"],
      "env": {
        "PUSHER_APP_ID": "${PUSHER_APP_ID}",
        "PUSHER_KEY": "${NEXT_PUBLIC_PUSHER_KEY}",
        "PUSHER_SECRET": "${PUSHER_SECRET}",
        "PUSHER_CLUSTER": "${NEXT_PUBLIC_PUSHER_CLUSTER}"
      },
      "description": "Real-time com Pusher"
    },
    "payments-stripe": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-stripe"],
      "env": {
        "STRIPE_SECRET_KEY": "${STRIPE_SECRET_KEY}",
        "STRIPE_PUBLISHABLE_KEY": "${NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY}",
        "STRIPE_WEBHOOK_SECRET": "${STRIPE_WEBHOOK_SECRET}"
      },
      "description": "Pagamentos Stripe"
    },
    "payments-mercadopago": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-mercadopago"],
      "env": {
        "MERCADOPAGO_ACCESS_TOKEN": "${MERCADOPAGO_ACCESS_TOKEN}",
        "MERCADOPAGO_CLIENT_ID": "${MERCADOPAGO_CLIENT_ID}",
        "MERCADOPAGO_CLIENT_SECRET": "${MERCADOPAGO_CLIENT_SECRET}"
      },
      "description": "Pagamentos MercadoPago (Brasil)"
    },
    "monitoring": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-sentry"],
      "env": {
        "SENTRY_DSN": "${SENTRY_DSN}",
        "SENTRY_AUTH_TOKEN": "${SENTRY_AUTH_TOKEN}"
      },
      "description": "Monitoramento com Sentry"
    },
    "cloud-storage": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-cloudflare-r2"],
      "env": {
        "R2_ACCOUNT_ID": "${R2_ACCOUNT_ID}",
        "R2_ACCESS_KEY_ID": "${R2_ACCESS_KEY_ID}",
        "R2_SECRET_ACCESS_KEY": "${R2_SECRET_ACCESS_KEY}"
      },
      "description": "Armazenamento Cloudflare R2"
    }
  },
  "environment": "development",
  "activeServers": ["filesystem", "git", "sqlite", "memory", "github", "analytics", "pdf", "puppeteer"],
  "notes": {
    "development": "Configuração otimizada para desenvolvimento local com SQLite",
    "production": "Para produção, altere 'environment' para 'production' e configure as variáveis necessárias",
    "features": {
      "analytics": "✅ Habilitado - Google Analytics G-ZC76X199S2", 
      "database": "✅ SQLite local - ./data/caris.db",
      "pushNotifications": "❌ Desabilitado",
      "sms": "❌ Desabilitado", 
      "email": "❌ Desabilitado",
      "ai": "❌ Desabilitado",
      "payments": "❌ Desabilitado",
      "realtime": "❌ Desabilitado"
    }
  }
} 