# Caris SaaS Pro - Environment Variables Template
# Copy this file to .env.local and fill with your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_URL=postgresql://username:password@localhost:5432/caris

# Database Connection Pool Settings (Optional - defaults shown)
DB_POOL_MAX=20                  # Maximum number of connections in pool (default: 20)
DB_IDLE_TIMEOUT=30              # Close idle connections after N seconds (default: 30)
DB_MAX_LIFETIME=3600            # Close connections after N seconds (default: 3600 = 1 hour)
DB_CONNECT_TIMEOUT=10           # Connection timeout in seconds (default: 10)
DB_DEBUG=false                  # Enable query logging for debugging (default: false)

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-here
NEXTAUTH_SECRET=your-nextauth-secret-here

# =============================================================================
# EMAIL SERVICE (Resend)
# =============================================================================
RESEND_API_KEY=sua_chave_resend
FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# SMS SERVICE (Twilio)
# =============================================================================
TWILIO_ACCOUNT_SID=sua_conta_twilio
TWILIO_AUTH_TOKEN=seu_token_twilio
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# REAL-TIME NOTIFICATIONS (Pusher)
# =============================================================================
PUSHER_APP_ID=seu_app_id
NEXT_PUBLIC_PUSHER_KEY=sua_chave_publica
PUSHER_SECRET=seu_secret
NEXT_PUBLIC_PUSHER_CLUSTER=us2

# =============================================================================
# PUSH NOTIFICATIONS (VAPID)
# =============================================================================
VAPID_PUBLIC_KEY=your-vapid-public-key-here
VAPID_PRIVATE_KEY=your-vapid-private-key-here

# =============================================================================
# PAYMENT PROCESSING (MercadoPago)
# =============================================================================
MERCADOPAGO_ACCESS_TOKEN=seu_token
MERCADOPAGO_CLIENT_ID=seu_client_id
MERCADOPAGO_CLIENT_SECRET=seu_client_secret

# =============================================================================
# PAYMENT PROCESSING (Stripe - Optional)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# AI SERVICES (Optional)
# =============================================================================
OPENAI_API_KEY=sua_chave_openai
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-key-here-64-characters

# =============================================================================
# SECURITY: VIRUS SCANNING (Optional but Recommended)
# =============================================================================
# VirusTotal API for cloud-based virus scanning (fallback when ClamAV unavailable)
# Sign up at: https://www.virustotal.com/
# Free tier: 500 scans/day, 4 requests/minute
# For production, install ClamAV locally (see docs/VIRUS_SCANNING_SETUP.md)
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# ClamAV Configuration (optional, for custom clamd setup)
# CLAMAV_HOST=localhost
# CLAMAV_PORT=3310

# =============================================================================
# CALENDAR INTEGRATIONS
# =============================================================================
# Google Calendar API
GOOGLE_CALENDAR_CLIENT_ID=your_google_client_id_here
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3000/api/calendar/google/callback

# Microsoft Graph API (Outlook)
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here
MICROSOFT_TENANT_ID=your_microsoft_tenant_id_here
MICROSOFT_REDIRECT_URI=http://localhost:3000/api/calendar/outlook/callback

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
SENTRY_DSN=seu_dsn_sentry
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here_64_characters

# Analytics
NEXT_PUBLIC_GA_ID=G-YOUR_GA_ID

# =============================================================================
# GITHUB INTEGRATION (for MCP)
# =============================================================================
GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# =============================================================================
# BACKUP & RECOVERY SYSTEM
# =============================================================================
# Backup storage locations
BACKUP_DIR=/var/backups/caris
FILE_BACKUP_DIR=/var/backups/caris/files

# Backup encryption (use a strong, unique key)
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-minimum-32-characters

# Email notifications for backups
BACKUP_EMAIL_NOTIFICATIONS=true
BACKUP_EMAIL_RECIPIENTS=admin@yourdomain.com,devops@yourdomain.com

# Slack notifications for backups (optional)
BACKUP_SLACK_NOTIFICATIONS=false
BACKUP_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Cron job security
CRON_SECRET=your-cron-secret-key-for-automated-backups

# Cloud storage for backups (optional - AWS S3 or Cloudflare R2)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_BACKUP_BUCKET=caris-backups
AWS_REGION=us-east-1

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Uncomment for development with local services
# REDIS_URL=redis://localhost:6379
# DATABASE_URL=postgresql://username:password@localhost:5432/caris_dev