{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install",
  "regions": ["gru1"],
  "crons": [
    {
      "path": "/api/compliance/data-retention",
      "schedule": "0 2 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/compliance/data-retention",
      "headers": [
        {
          "key": "x-cron-secret",
          "value": "@data_retention_cron_secret"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "functions": {
    "app/api/**/*": {
      "maxDuration": 30
    }
  }
}
